                    <Label Content="Operation    操作：" HorizontalAlignment="Left" Margin="50,501,0,0" VerticalAlignment="Top"/>
                    <Label Content="Write partition  刷写分区" HorizontalAlignment="Left" Margin="50,534,0,0" VerticalAlignment="Top"/>
                    <Label Content="Image file address  镜像文件路径：" HorizontalAlignment="Left" Margin="50,561,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="list_file_addr" HorizontalAlignment="Left" Margin="275,554,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255"/>
                    <Button x:Name="list_write" Content="WRITE  刷写" Margin="609,556,0,0" VerticalAlignment="Top" Width="117" IsEnabled="False"/>
                    <Button x:Name="list_read" Content="EXTRACT  读取分区" Margin="745,556,0,0" VerticalAlignment="Top" Width="162" IsEnabled="False"/>
                    <Button x:Name="list_erase" Content="ERASE  擦除分区" Margin="921,556,0,0" VerticalAlignment="Top" Width="170" IsEnabled="False"/>
                    <Button x:Name="select_list_addr" Content="..." Margin="542,554,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Manually Operate  手动操作">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Partition name  分区名：" HorizontalAlignment="Left" Margin="45,49,0,0" VerticalAlignment="Top"/>
                    <Label Content="Write partition   刷写分区" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,24,0,0"/>
                    <TextBox x:Name="m_part_flash" HorizontalAlignment="Left" Margin="205,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
                    <Label Content="Image file path  镜像文件地址：" HorizontalAlignment="Left" Margin="45,89,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="m_file_path" HorizontalAlignment="Left" Margin="245,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245"/>
                    <Button x:Name="m_select" Content="..." Margin="502,84,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="m_write" Content="WRITE   刷写" Margin="55,139,0,0" VerticalAlignment="Top" IsEnabled="False"/>
                    <Label Content="Extract partition  读取分区" HorizontalAlignment="Left" Margin="45,224,0,0" VerticalAlignment="Top"/>
                    <Label Content="Partition name  分区名：" HorizontalAlignment="Left" Margin="45,249,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="m_part_read" HorizontalAlignment="Left" Margin="210,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
                    <Button x:Name="m_read" Content="EXTRACT  读取" Margin="55,308,0,0" VerticalAlignment="Top" IsEnabled="False"/>
                    <Label Content="------------------------------------------------------------------------------------------------------" HorizontalAlignment="Left" Margin="10,181,0,0" VerticalAlignment="Top"/>
                    <Label Content="------------------------------------------------------------------------------------------------------" HorizontalAlignment="Left" Margin="10,356,0,0" VerticalAlignment="Top"/>
                    <Label Content="Erase partition  擦除分区" HorizontalAlignment="Left" Margin="45,381,0,0" VerticalAlignment="Top"/>
                    <Label Content="Partition name  分区名：" HorizontalAlignment="Left" Margin="45,426,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="m_part_erase" HorizontalAlignment="Left" Margin="200,419,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Text=""/>
                    <Button x:Name="m_erase" Content="ERASE  擦除" Margin="55,474,0,0" VerticalAlignment="Top" IsEnabled="False"/>
                </Grid>
            </TabItem>
            <TabItem Header="Advanced Operation  高级操作">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Toggle the A/B partition boot settings  切换A/B分区启动设置" HorizontalAlignment="Left" Margin="69,43,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="set_active_a" Content="Boot A partitons  启动A分区" Margin="71,84,0,0" VerticalAlignment="Top" IsEnabled="False" />
                    <Button x:Name="set_active_b" Content="Boot B partitions  启动B分区" Margin="293,84,0,0" VerticalAlignment="Top" IsEnabled="False"/>
                    <Label Content="Repartition  重新分区" HorizontalAlignment="Left" Margin="69,154,0,0" VerticalAlignment="Top"/>
                    <Label Content="XML part info file path  XML分区表文件路径" HorizontalAlignment="Left" Margin="85,360,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="xml_path" HorizontalAlignment="Left" Margin="82,388,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="374"/>
                    <Button x:Name="select_xml" Content="..." Margin="480,389,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="start_repart" Content="START  开始" Margin="83,439,0,0" VerticalAlignment="Top" IsEnabled="False"/>
                    <TextBox x:Name="part" HorizontalAlignment="Left" Margin="67,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="708" Height="165" IsReadOnly="True" Text="How to make part info XML file?  怎么制作分区表文件？
                                                                                                                     
                             
                             Please follow the format to make part info XML file.  请参照格式以制作XML分区表文件。                                                                                        
                                                                                                                       An example is in the app folder.
                                                                                                                              一个示例文件在软件目录。"/>
                </Grid>
            </TabItem>
            <TabItem Header="Advanced Settings  高级设置">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Data block size  数据块大小" HorizontalAlignment="Left" Margin="79,42,0,0" VerticalAlignment="Top"/>
                    <Slider x:Name="blk_size" HorizontalAlignment="Left" Margin="35,73,0,0" VerticalAlignment="Top" Width="1036" Minimum="10000" Maximum="60000" LargeChange="10000" SmallChange="10000"  Value="10000" ValueChanged="blk_size_ValueChanged" TickFrequency="10000" IsEnabled="False"/>
                    <Label x:Name="size_con" Content="10000" HorizontalAlignment="Left" Margin="1112,75,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
