<Window x:Name="Form1" x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpreadtrumDumpClient"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Loaded="Form1_Loaded"
        Title="SpreadtrumDumpClient   Version 0.2.0.1  By Ryan Crepa" Height="765" Width="1174" Icon="/flash.png">
    <Grid
        Background="#FFDFDEDE"
        >
        <TabControl Background="#190F0F0F" VerticalAlignment="Top" Height="672">
            <TabItem Header="Connect  连接">
                <Grid Background="#FFE5E5E5">
                    <Image HorizontalAlignment="Left" Height="298" Margin="879,93,0,0" VerticalAlignment="Top" Width="339" Source="/example.png"/>
                    <Label Content="Welcome to SpreadtrumDumpClient!" HorizontalAlignment="Left" Margin="29,18,0,0" VerticalAlignment="Top" Height="28" Width="467" FontSize="20"/>
                    <Label Content="欢迎使用SpreadtrumDumpClient!" HorizontalAlignment="Left" Margin="30,51,0,0" VerticalAlignment="Top" FontSize="20"/>
                    <Label x:Name="ti_e" Content="Please connect your device with BROM mode" HorizontalAlignment="Left" Margin="30,145,0,0" VerticalAlignment="Top" FontSize="20"/>
                    <Label x:Name="ti_c" Content="请将你的设备连接到BROM模式" HorizontalAlignment="Left" Margin="30,114,0,0" VerticalAlignment="Top" FontSize="20"/>
                    <Label Content="Press and hold the volume up or down keys and the power key to connect" HorizontalAlignment="Left" Margin="30,181,0,0" VerticalAlignment="Top"/>
                    <Label Content="按住音量增大或减小键和电源键进行连接" HorizontalAlignment="Left" Margin="30,204,0,0" VerticalAlignment="Top"/>
                    <Label Content="Status : " HorizontalAlignment="Left" Margin="30,575,0,0" FontSize="17" Height="24" VerticalAlignment="Top"/>
                    <Label x:Name="con" Content="Not connected" HorizontalAlignment="Left" Margin="105,577,0,0" FontSize="17" FontWeight="Bold" Height="23" VerticalAlignment="Top"/>
                    <Label Content="FDL Send Settings" HorizontalAlignment="Left" Margin="30,244,0,0" VerticalAlignment="Top"/>
                    <Label Content="FDL发送设置" HorizontalAlignment="Left" Margin="30,266,0,0" VerticalAlignment="Top"/>
                    <Label Content="Mode : " HorizontalAlignment="Left" Margin="30,601,0,0" Height="19" VerticalAlignment="Top"/>
                    <Label x:Name="mode" Content="BROM Not connected!!!" HorizontalAlignment="Left" Margin="81,601,0,0" Height="19" VerticalAlignment="Top"/>
                    <Label Content="FDL File Path  FDL文件路径 :" HorizontalAlignment="Left" Margin="30,319,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="fdl_file_path" HorizontalAlignment="Left" Margin="225,314,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275" Height="32"/>
                    <Button x:Name="select_fdl" Content="..." Margin="540,314,0,0" VerticalAlignment="Top"/>
                    <Label Content="FDL Send Address  FDL发送地址 ：" HorizontalAlignment="Left" Margin="30,356,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="fdl_addr" HorizontalAlignment="Left" Margin="250,349,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="32"/>
                    <Button x:Name="fdl_exec" Content="Execute   执行" Margin="38,394,0,0" VerticalAlignment="Top" Width="157" Click="fdl_exec_Click" IsEnabled="False"/>
                    <Label Content="Advanced   高级选项" HorizontalAlignment="Left" Margin="30,464,0,0" VerticalAlignment="Top"/>
                    <ui:ToggleSwitch Name="exec_addr" Margin="30,484,0,0" VerticalAlignment="Top" Header="Try to use CVE to skip FDL verification(brom stage only)   利用漏洞绕过FDL签名验证(仅BROM模式)"/>
                    <Label Content="CVE Binary File Address CVE可执行镜像 :" HorizontalAlignment="Left" Margin="30,544,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="cve_addr" HorizontalAlignment="Left" Margin="300,539,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="295"/>
                    <Button x:Name="select_cve" Content="..." Margin="607,539,0,0" VerticalAlignment="Top"/>
                    <ui:ToggleSwitch Name="sprd4" Header="Kick device to SPRD4  使用SPRD4模式" Margin="664,484,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="connect_1" Content="CONNECT  连接" Margin="943,470,0,0" VerticalAlignment="Top" Width="143" Height="52"/>
                    <Label Content="Wait connection time  连接等待时间 (s):" HorizontalAlignment="Left" Margin="669,537,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="wait_con" HorizontalAlignment="Left" Margin="669,561,0,0" TextWrapping="Wrap" Text="30" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
            <TabItem Header="Partition Operation  分区操作">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="part_list" Width="1000" Height="450" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5,39,0,0" SelectionChanged="part_list_SelectionChanged"/>
