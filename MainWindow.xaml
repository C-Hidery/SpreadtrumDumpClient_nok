                </Grid>
            </TabItem>
        </TabControl>
        <ProgressBar x:Name="progressBar_1" HorizontalAlignment="Left" Height="9" Margin="20,705,0,0" VerticalAlignment="Top" Width="345"/>
        <Label Content="Progress  进度:" HorizontalAlignment="Left" Margin="25,680,0,0" VerticalAlignment="Top"/>
        <Button x:Name="poweroff" Content="POWEROFF  关机" Margin="377,684,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Button x:Name="reboot" Content="REBOOT  重启" Margin="516,684,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Button x:Name="recovery" Content="BOOT TO RECOVERY  重启到恢复模式" Margin="634,684,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Button x:Name="fastboot" Content="BOOT TO FASTBOOT  重启到线刷模式" Margin="902,684,0,0" VerticalAlignment="Top" IsEnabled="False"/>
    </Grid>

</Window>
