            <TabItem Header="Log  日志">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="txtOutput" Margin="25,9,25,100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"  />
                    <Button x:Name="exp_log" Content="Export  导出" Margin="64,567,0,0" VerticalAlignment="Top"/>
